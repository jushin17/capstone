<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#fDDCAA">



    <TextView
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="카카오톡을 읽기위해서는 설정이 필요합니다."
        android:id="@+id/setup_text1"
        android:layout_gravity="center_horizontal" />
    <TextView
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="아래 버튼을 클릭하시고 해당 어플을 체크해주세요."
        android:id="@+id/setup_text2"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/canReadBtn"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/kakaotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        android:text="[원하는 기능을 선택하세요]"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <CheckBox
        android:id="@+id/option1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="25dp"
        android:text="카카오톡 읽어주기"
        android:textSize="26sp" />

    <CheckBox
        android:id="@+id/option2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="25dp"
        android:text="문자메세지 읽어주기"
        android:textSize="26sp" />

    <Button
        android:id="@+id/setup_button"
        style="?android:attr/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="설정 완료"
        android:textStyle="bold" />
</LinearLayout>