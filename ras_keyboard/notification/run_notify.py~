# -*- encoding: utf-8 -*-
# chunjiin keyboard

import sys, os
import string
from PyQt4 import QtCore, QtGui, uic
from PyQt4.QtCore import *
from PyQt4.QtGui import *

SMS=1
KAKAOTALK=2
MUSIK=3

formClass = uic.loadUiType("notify.ui")[0]
nameOfApp=raw_input()

class Notify(QTableWidget, formClass):
	def __init__(self, *args, **kwargs):
		QTableWidget.__init__(self, *args, **kwargs)
		self.setupUi(self)
		self.setStyleSheet("background-color: rgb(255, 255, 255);\n"+\
		                       "color: rgb(0, 0, 0);\n"+\
		                       "border:0px ;\n")
		self.widgets = [self.widget_1, self.widget_2, self.widget_3, self.widget_4, self.widget_5]
		self.setImg(nameOfApp)

	def setImg(self, nameOfApp):
		for widget in self.widgets:
			self.getImg(widget)

	def getImg(self, widget):
		(*widget).icon_1.setStyleSheet("background-image: url(./%s.png)" %nameOfApp)


if __name__ == '__main__':
	app = QtGui.QApplication([])
   	wd = QtGui.QMainWindow()
   	wd.resize(800,800)
   	mb = Notify()
   	mb.setFixedSize(800,800)
   	wd.setCentralWidget(mb)
   	wd.show()
   	sys.exit(app.exec_())
	app.exec_()
